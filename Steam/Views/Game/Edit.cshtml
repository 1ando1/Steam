@model Data.Models.Game;

<h1>Edit Game</h1>
<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="Trailer" class="form-label">Trailer (Video URL)</label>
        <input asp-for="Trailer" class="form-control">
        <span asp-validation-for="Trailer" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Weight" class="form-label">Weight</label>
        <input asp-for="Weight" class="form-control">
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Creator" class="form-label">Creator</label>
        <input asp-for="Creator" class="form-control">
        <span asp-validation-for="Creator" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Publisher" class="form-label">Publisher</label>
        <input asp-for="Publisher" class="form-control">
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Genre" class="form-label">Genre</label>
        <input asp-for="Genre" class="form-control">
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Image" class="form-label">Image URL</label>
        <input asp-for="Image" class="form-control">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-outline-danger w-100">Cancel</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-outline-primary w-100">Edit</button>
    </div>
</form>