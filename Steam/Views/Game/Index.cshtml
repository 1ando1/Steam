@model IEnumerable<Data.Models.Game>;

    @{
        string imgPlaceholder = @"data:image/png;base64,";
    }

    <table class="table table-darkblue table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Creator</th>
                <th scope="col">Price</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <form asp-action="Index" method="get">
                <div class="form-group float-right">
                    <input type="text" name="searchStr" value="@ViewData["CurrentFilter"]" placeholder="Search by Name" />
                    <input type="submit" value="Search" class="btn-primary" />
                </div>
            </form>
                @foreach (var game in Model)
                {
                <tr class="align-middle">
                    <td scope="row">@game.Id</td>
                    <td>
                        <div class="image-cell-block">
                            <img src="@(game.Image ?? imgPlaceholder)" class="image-cell" />
                        </div>
                    </td>
                    <td scope="row">@game.Name</td>
                    <td scope="row">@game.Creator</td>
                    <td scope="row">@game.Price$</td>
                    <td>
                        <a asp-controller="Game" asp-action="Details" asp-route-id="@game.Id" class="btn ap-btn">Details</a>
                        <a asp-controller="Game" asp-action="Edit" asp-route-id="@game.Id" class="btn ap-btn">Edit</a>
                        <a asp-controller="Game" asp-action="Delete" asp-route-id="@game.Id" class="btn ap-btn">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
    </table>
    <a asp-controller="Game" asp-action="Add" type="button" class="btn table-lightblue">Add Game</a>