@model IEnumerable<Data.Models.Game>;

@{
    string imgPlaceholder = @"data:image/png;base64,";
}

<div class="card text-center table-darkblue">
    <div class="card-header">
        Your Cart
    </div>
    <div class="card-body">
        @if (Model.Count() == 0)
        {
            <p>Oops..There is nothing to do</p>
            <a asp-controller="Home" asp-action="Index" class="btn table-lightblue">Shop Link</a>

        }
        else
        {
            <h5 class="card-title">Product List</h5>
            <ul class="list-group">
                @foreach (var game in @Model)
                {
                <a asp-controller="Game" asp-action="Details" asp-route-id="@game.Id">
                    <li class="list-group-item d-flex justify-content-between align-items-center table-darkblue">
                        <img height="80" src="@(game.Image ?? imgPlaceholder)" alt="Product image">
                        <span><strong>@game.Name</strong></span>
                        <span class="badge bg-primary rounded-pill">@game.Price$</span>
                    </li>
                </a>
                }
            </ul>
            @*<a asp-controller="Orders" asp-action="Add" class="btn btn-primary mt-3">Confirm</a>*@
        }
    </div>
    <div class="card-footer text-muted ">
        Total Price: @Model.Sum(x => x.Price)$
    </div>
</div>